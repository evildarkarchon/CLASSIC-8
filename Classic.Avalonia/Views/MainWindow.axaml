<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Classic.Avalonia.ViewModels"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="Classic.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Crash Log Auto Scanner &amp; Setup Integrity Checker"
        MinWidth="700" MinHeight="725"
        Width="700" Height="725"
        WindowStartupLocation="CenterScreen"
        DragDrop.AllowDrop="True">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <!-- Keyboard shortcuts -->
    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding SelectModsFolderCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+O" Command="{Binding SelectScanFolderCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding ScanCrashLogsCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding ScanGameFilesCommand}" />
        <KeyBinding Gesture="F1" Command="{Binding ShowHelpCommand}" />
        <KeyBinding Gesture="Ctrl+U" Command="{Binding CheckForUpdatesCommand}" />
        <KeyBinding Gesture="Ctrl+," Command="{Binding ShowSettingsCommand}" />
        <KeyBinding Gesture="Ctrl+1" Command="{Binding NavigateToTabCommand}" CommandParameter="0" />
        <KeyBinding Gesture="Ctrl+2" Command="{Binding NavigateToTabCommand}" CommandParameter="1" />
        <KeyBinding Gesture="Ctrl+3" Command="{Binding NavigateToTabCommand}" CommandParameter="2" />
    </Window.KeyBindings>

    <Window.Styles>
        <Style Selector="TabControl">
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="TabItem">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="0,0,2,0" />
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="#007ACC" />
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#005A9E" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="MinHeight" Value="32" />
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#1F93FF" />
        </Style>

        <Style Selector="Button.primary:pressed">
            <Setter Property="Background" Value="#005A9E" />
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#4D4D4D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#666666" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#5A5A5A" />
        </Style>

        <Style Selector="Button.success">
            <Setter Property="Background" Value="#28A745" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#1E7E34" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#DC3545" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#C82333" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#666666" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#666666" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <Style Selector="Separator">
            <Setter Property="Background" Value="#666666" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="0,6" />
        </Style>

        <Style Selector="TextBlock.section-title">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <Style Selector="TextBlock.help-text">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Margin" Value="0,2" />
        </Style>

        <Style Selector="Border.section">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="BorderBrush" Value="#666666" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Margin" Value="0,2" />
        </Style>

        <!-- Drag and drop styles -->
        <Style Selector="Border.drop-zone">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="BorderBrush" Value="#666666" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style Selector="Border.drop-zone.drag-over">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="BorderBrush" Value="#1F93FF" />
        </Style>

        <Style Selector="TextBlock.drop-message">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="TextBlock.drop-message.drag-over">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </Window.Styles>

    <Grid Background="#2D2D30">
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Main Options Tab -->
            <TabItem Header="MAIN OPTIONS">
                <ScrollViewer Padding="6">
                    <StackPanel Spacing="4">

                        <!-- Folder Selection Section -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="FOLDER CONFIGURATION" Classes="section-title" />

                                <!-- Staging Mods Folder -->
                                <StackPanel Spacing="3">
                                    <TextBlock Text="STAGING MODS FOLDER" FontWeight="Medium" Foreground="White" />
                                    <TextBlock
                                        Text="Select the folder where your mod manager (e.g., MO2) stages your mods."
                                        Classes="help-text" />
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" Classes="secondary" Content="Browse..."
                                                Command="{Binding SelectModsFolderCommand}" Margin="4,0,0,0" />
                                        <TextBox Text="{Binding SelectedModsFolder}"
                                                 Watermark="Optional: Select your mod staging folder (e.g., MO2/mods)" />
                                    </DockPanel>
                                </StackPanel>

                                <!-- Custom Scan Folder -->
                                <StackPanel Spacing="3">
                                    <TextBlock Text="CUSTOM SCAN FOLDER" FontWeight="Medium" Foreground="White" />
                                    <TextBlock
                                        Text="Select a supplementary custom folder containing crash logs to scan. The game directory is always used for scanning."
                                        Classes="help-text" />
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" Classes="secondary" Content="Browse..."
                                                Command="{Binding SelectScanFolderCommand}" Margin="4,0,0,0" />
                                        <TextBox Text="{Binding SelectedScanFolder}"
                                                 Watermark="Optional: Select a supplementary custom folder with crash logs" />
                                    </DockPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Scan Buttons -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="SCAN OPERATIONS" Classes="section-title" />

                                <!-- Drop Zone for Crash Logs -->
                                <Border Classes="drop-zone" Name="DropZone" MinHeight="80"
                                        IsVisible="{Binding !IsScanning}">
                                    <StackPanel Spacing="6" VerticalAlignment="Center">
                                        <TextBlock Classes="drop-message"
                                                   Text="🗂️ Drop crash log files here for quick scanning"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Classes="drop-message"
                                                   Text="or use the buttons below"
                                                   FontSize="11"
                                                   Opacity="0.8"
                                                   HorizontalAlignment="Center" />
                                    </StackPanel>
                                </Border>

                                <Grid ColumnDefinitions="*,*" HorizontalAlignment="Stretch">
                                    <Button Classes="primary" Content="SCAN CRASH LOGS"
                                            Command="{Binding ScanCrashLogsCommand}"
                                            IsEnabled="{Binding !IsScanning}"
                                            ToolTip.Tip="Scan all detected crash logs for issues. (Ctrl+S)"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Margin="0,0,4,0" MinHeight="36" Grid.Column="0" />
                                    <Button Classes="primary" Content="SCAN GAME FILES"
                                            Command="{Binding ScanGameFilesCommand}"
                                            IsEnabled="{Binding !IsScanning}"
                                            ToolTip.Tip="Scan game and mod files for potential problems. (Ctrl+Shift+S)"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Margin="4,0,0,0" MinHeight="36" Grid.Column="1" />
                                </Grid>

                                <!-- Enhanced Progress Display -->
                                <StackPanel IsVisible="{Binding IsScanning}" Spacing="4">
                                    <ProgressBar Value="{Binding ProgressPercentage}"
                                                 IsIndeterminate="{Binding IsProgressIndeterminate}"
                                                 MinHeight="20" />
                                    <TextBlock Text="{Binding ProgressMessage}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               TextAlignment="Center" />
                                    <TextBlock Text="{Binding ProgressDetails}"
                                               Foreground="#CCCCCC"
                                               FontSize="11"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               IsVisible="{Binding ProgressDetails, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    <TextBlock Text="{Binding EstimatedTimeRemaining, StringFormat='ETA: {0:mm\\:ss}'}"
                                               Foreground="#CCCCCC"
                                               FontSize="11"
                                               TextAlignment="Center"
                                               IsVisible="{Binding EstimatedTimeRemaining, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Scan Statistics Section -->
                        <Border Classes="section"
                                IsVisible="{Binding ScanStatistics, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <StackPanel Spacing="4">
                                <TextBlock Text="LAST SCAN RESULTS" Classes="section-title" />
                                <ScrollViewer MaxHeight="120" VerticalScrollBarVisibility="Auto">
                                    <TextBlock Text="{Binding ScanStatistics}"
                                               Foreground="#CCCCCC"
                                               FontSize="11"
                                               FontFamily="Consolas,Monaco,monospace"
                                               TextWrapping="Wrap"
                                               Margin="4" />
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Settings Section -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="CLASSIC SETTINGS" Classes="section-title" />

                                <!-- Settings Grid -->
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
                                    <CheckBox Grid.Row="0" Grid.Column="0" Content="FCX MODE"
                                              IsChecked="{Binding FcxMode}"
                                              ToolTip.Tip="Enable extended file integrity checks." Margin="0,2" />
                                    <CheckBox Grid.Row="0" Grid.Column="1" Content="SIMPLIFY LOGS"
                                              IsChecked="{Binding SimplifyLogs}"
                                              ToolTip.Tip="Remove redundant lines from crash logs." Margin="0,2" />

                                    <CheckBox Grid.Row="1" Grid.Column="0" Content="UPDATE CHECK"
                                              IsChecked="{Binding UpdateCheck}"
                                              ToolTip.Tip="Automatically check for CLASSIC updates." Margin="0,2" />
                                    <CheckBox Grid.Row="1" Grid.Column="1" Content="VR MODE"
                                              IsChecked="{Binding VrMode}"
                                              ToolTip.Tip="Prioritize settings for VR version of the game."
                                              Margin="0,2" />

                                    <CheckBox Grid.Row="2" Grid.Column="0" Content="SHOW FID VALUES"
                                              IsChecked="{Binding ShowFormIdValues}"
                                              ToolTip.Tip="Look up FormID names (slower scans)." Margin="0,2" />
                                    <CheckBox Grid.Row="2" Grid.Column="1" Content="MOVE INVALID LOGS"
                                              IsChecked="{Binding MoveInvalidLogs}"
                                              ToolTip.Tip="Move incomplete/unscannable logs to a separate folder."
                                              Margin="0,2" />

                                    <CheckBox Grid.Row="3" Grid.Column="0" Content="AUDIO NOTIFICATIONS"
                                              IsChecked="{Binding AudioNotifications}"
                                              ToolTip.Tip="Play sounds for scan completion/errors." Margin="0,2" />
                                </Grid>

                                <!-- Update Source Selection -->
                                <DockPanel Margin="0,6,0,0">
                                    <TextBlock DockPanel.Dock="Left" Text="Update Source:" VerticalAlignment="Center"
                                               Foreground="White" Margin="0,0,6,0" />
                                    <ComboBox ItemsSource="{Binding UpdateSourceOptions}"
                                              SelectedItem="{Binding UpdateSource}"
                                              ToolTip.Tip="Select where CLASSIC checks for updates (Nexus for stable, GitHub for latest)." />
                                </DockPanel>
                            </StackPanel>
                        </Border>

                        <!-- Utility Buttons -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="UTILITIES" Classes="section-title" />

                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <Button Classes="secondary" Content="ABOUT" Command="{Binding ShowAboutCommand}"
                                            ToolTip.Tip="Information about this CLASSIC version." Margin="2" />
                                    <Button Classes="secondary" Content="HELP (F1)" Command="{Binding ShowHelpCommand}"
                                            ToolTip.Tip="Open comprehensive help documentation." Margin="2" />
                                    <Button Classes="secondary" Content="SETTINGS"
                                            Command="{Binding ShowSettingsCommand}"
                                            ToolTip.Tip="Open application settings. (Ctrl+,)" Margin="2" />
                                    <Button Classes="secondary" Content="🎨 THEME"
                                            Command="{Binding ToggleThemeCommand}"
                                            ToolTip.Tip="Toggle between light and dark themes." Margin="2" />
                                    <Button Classes="secondary" Content="LOGS FOLDER"
                                            Command="{Binding OpenCrashLogsFolderCommand}"
                                            ToolTip.Tip="Open the Crash Logs directory in your file explorer."
                                            Margin="2" />
                                    <Button Classes="secondary" Content="CHECK UPDATES"
                                            Command="{Binding CheckForUpdatesCommand}"
                                            ToolTip.Tip="Manually check for CLASSIC updates. (Ctrl+U)" Margin="2" />
                                    <Button Classes="success" Content="📊 PAPYRUS MONITOR"
                                            Command="{Binding StartPapyrusMonitoringCommand}"
                                            ToolTip.Tip="Start monitoring Papyrus logs for real-time analysis."
                                            Margin="2" />
                                    <Button Classes="secondary" Content="📋 PASTEBIN FETCH"
                                            Command="{Binding ShowPastebinDialogCommand}"
                                            ToolTip.Tip="Fetch crash logs from Pastebin URLs." Margin="2" />
                                </WrapPanel>

                                <Button Classes="danger" Content="EXIT" Command="{Binding ExitCommand}"
                                        ToolTip.Tip="Close CLASSIC." HorizontalAlignment="Right" MinWidth="80" />
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- File Backup Tab -->
            <TabItem Header="FILE BACKUP">
                <ScrollViewer Padding="6">
                    <StackPanel Spacing="8">

                        <!-- Instructions -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="FILE BACKUP OPERATIONS" Classes="section-title" />
                                <TextBlock
                                    Text="BACKUP → Backup files from the game folder into the CLASSIC Backup folder."
                                    Classes="help-text" />
                                <TextBlock
                                    Text="RESTORE → Restore file backup from the CLASSIC Backup folder into the game folder."
                                    Classes="help-text" />
                                <TextBlock
                                    Text="REMOVE → Remove files only from the game folder without removing existing backups."
                                    Classes="help-text" />
                            </StackPanel>
                        </Border>

                        <!-- XSE Section -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="XSE" Classes="section-title" TextAlignment="Center" />
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Classes="secondary" Content="BACKUP XSE"
                                            Command="{Binding BackupXseCommand}" Margin="2" />
                                    <Button Classes="success" Content="RESTORE XSE"
                                            Command="{Binding RestoreXseCommand}" Margin="2" />
                                    <Button Classes="danger" Content="REMOVE XSE" Command="{Binding RemoveXseCommand}"
                                            Margin="2" />
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- RESHADE Section -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="RESHADE" Classes="section-title" TextAlignment="Center" />
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Classes="secondary" Content="BACKUP RESHADE"
                                            Command="{Binding BackupReshadeCommand}" Margin="2" />
                                    <Button Classes="success" Content="RESTORE RESHADE"
                                            Command="{Binding RestoreReshadeCommand}" Margin="2" />
                                    <Button Classes="danger" Content="REMOVE RESHADE"
                                            Command="{Binding RemoveReshadeCommand}" Margin="2" />
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- VULKAN Section -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="VULKAN" Classes="section-title" TextAlignment="Center" />
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Classes="secondary" Content="BACKUP VULKAN"
                                            Command="{Binding BackupVulkanCommand}" Margin="2" />
                                    <Button Classes="success" Content="RESTORE VULKAN"
                                            Command="{Binding RestoreVulkanCommand}" Margin="2" />
                                    <Button Classes="danger" Content="REMOVE VULKAN"
                                            Command="{Binding RemoveVulkanCommand}" Margin="2" />
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- ENB Section -->
                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="ENB" Classes="section-title" TextAlignment="Center" />
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Classes="secondary" Content="BACKUP ENB"
                                            Command="{Binding BackupEnbCommand}" Margin="2" />
                                    <Button Classes="success" Content="RESTORE ENB"
                                            Command="{Binding RestoreEnbCommand}" Margin="2" />
                                    <Button Classes="danger" Content="REMOVE ENB" Command="{Binding RemoveEnbCommand}"
                                            Margin="2" />
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Articles Tab -->
            <TabItem Header="ARTICLES">
                <ScrollViewer Padding="6">
                    <StackPanel Spacing="8">

                        <Border Classes="section">
                            <StackPanel Spacing="4">
                                <TextBlock Text="USEFUL RESOURCES &amp; LINKS" Classes="section-title"
                                           TextAlignment="Center" />

                                <ItemsControl ItemsSource="{Binding ResourceLinks}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="secondary" Content="{Binding Title}"
                                                    ToolTip.Tip="{Binding Url}"
                                                    Margin="2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Toast Notification Container -->
        <ContentControl Name="ToastContainer" />
    </Grid>
</Window>
